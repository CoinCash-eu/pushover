source 'https://rubygems.org'
gemspec

group :build do
  gem 'bump'
  gem 'bundler'
  gem 'rake', '~> 10.0'
  gem 'rubocop'
  gem 'rubocop-rspec'
  gem 'simplecov'
  gem 'simplecov-console'
  gem 'yard'
end

group :development, optional: true do
  gem 'guard'
  gem 'guard-bundler'
  gem 'guard-rspec'
  gem 'guard-rubocop'
  gem 'guard-shell'
  gem 'guard-yard'
  gem 'pry'
  gem "pry-inline"
  gem "solargraph"
end