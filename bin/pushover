#!/usr/bin/env ruby

require 'pushover'

include Pushover
Options.parse!

if Options[:app]
	puts "Saving #{Options[:app][0]} to #{Options[:app][1]}."
	Pushover.add_app Options[:app][0], Options[:app][1]
else
	response = Pushover.notification Options[:token], Options[:appkey], Options[:message]
	if response.code == 200
		puts "Message sent successfully!"
	else
		puts "#{response.code}: #{response.body}"
	end
end
